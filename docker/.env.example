# ===========================================
# Social Media Automation Platform - Environment Variables
# ===========================================

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Database Configuration
DATABASE_URL=sqlite:///./social_media_automation.db

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# GOOGLE SERVICES (REQUIRED)
# ===========================================

# Google Gemini & Drive Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id-optional

# ===========================================
# SOCIAL MEDIA PLATFORMS (OPTIONAL)
# Configure these through the web UI after initial setup
# ===========================================

# Instagram Configuration
INSTAGRAM_USERNAME=your-instagram-username
INSTAGRAM_PASSWORD=your-instagram-password

# Facebook Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token

# YouTube Configuration
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# LinkedIn Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Development/Production Mode
DEBUG=false
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/hive.log

# ===========================================
# EXTERNAL SERVICE URLS
# ===========================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API Base URL
API_BASE_URL=http://localhost:8000

# ===========================================
# PERFORMANCE & RESOURCE SETTINGS
# ===========================================

# Thread Pool Settings
MAX_WORKERS=4
THREAD_POOL_SIZE=10

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===========================================
# BROWSER AUTOMATION SETTINGS
# ===========================================

# Playwright/Chromium Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
DOWNLOAD_TIMEOUT=420000

# Gemini Automation Settings
GEMINI_TIMEOUT=300000
GEMINI_MAX_RETRIES=3

# ===========================================
# SECURITY SETTINGS
# ===========================================

# CORS Settings
ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
ALLOW_CREDENTIALS=true
ALLOW_METHODS=["*"]
ALLOW_HEADERS=["*"]

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Optional: Enable analytics
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=

# Optional: External monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=false

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================

# Maximum file sizes (in MB)
MAX_IMAGE_SIZE=10
MAX_VIDEO_SIZE=100
MAX_FILE_SIZE=50

# Upload directories
UPLOAD_DIR=uploads
TEMP_DIR=temp

# ===========================================
# SCHEDULER SETTINGS
# ===========================================

# Background job scheduler
SCHEDULER_TIMEZONE=UTC
SCHEDULER_MAX_INSTANCES=5

# ===========================================
# NOTIFICATIONS (OPTIONAL)
# ===========================================

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook notifications
WEBHOOK_URL=
WEBHOOK_SECRET=